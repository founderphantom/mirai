{
  "name": "@airi/api",
  "version": "1.0.0",
  "description": "AIRI Platform API Server",
  "scripts": {
    "dev": "next dev -p 3001",
    "build": "npm run test:fast && next build",
    "start": "next start -p 3001",
    "lint": "eslint . --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "test": "jest --no-coverage",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=tests/unit --no-coverage",
    "test:integration": "jest --testPathPattern=tests/integration --no-coverage",
    "test:performance": "jest --testPathPattern=tests/performance --runInBand",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:debug": "node --inspect-brk ./node_modules/.bin/jest --runInBand",
    "test:clear-cache": "jest --clearCache",
    "test:fast": "jest --no-coverage --maxWorkers=50% --silent"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.16.1",
    "@supabase/supabase-js": "^2.39.3",
    "@trpc/client": "^10.45.0",
    "@trpc/server": "^10.45.0",
    "@upstash/ratelimit": "^1.0.3",
    "@upstash/redis": "^1.28.1",
    "@vercel/edge": "^1.1.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "groq-sdk": "^0.3.3",
    "helmet": "^7.1.0",
    "nanoid": "^5.0.4",
    "next": "14.2.15",
    "openai": "^4.24.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "stripe": "^14.10.0",
    "superjson": "^2.2.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/jest": "^29.5.11",
    "@types/micro": "^10.0.0",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.2.15",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.5",
    "micro": "^10.0.1",
    "node-mocks-http": "^1.13.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}